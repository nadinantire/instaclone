<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

 
    <% @profiles.each do |profile| %>
      
        <p><%= image_tag profile.image.url, class:"image"%></p>
       <p> <%= profile.user.name %></p>
        <%= link_to 'Show', profile, class:"btn btn-primary" %>
        <%= link_to 'Edit', edit_profile_path(profile), class:"btn btn-primary" %>
        <%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-primary" %>
      
    <% end %>



