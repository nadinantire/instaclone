<p id="notice"><%= notice %></p>
<p>
  <strong>Content:</strong>
  <%= @blog.content %>
</p>
<p>
  <strong>Image:</strong>
  <% if @blog.image.url %>
      <%= image_tag @blog.image.url, class:"image" %>
  
      <% end %>
</p>
<p>
  <strong>User:</strong>
  <%=@blog.user.name %>
</p>
<% unless @blog.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'Cancel favorite', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'Make it a favorite', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
<%= link_to 'Back', blogs_path, class: "btn btn-primary"  %>
