    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <nav class="navbar navbar-expand-sm bg-danger navbar-dark">
  <a class="navbar-brand" href="#">instagram</a>
</nav>
  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %><br><br>
  <% if user_signed_in? %>
    Logged in as <strong><%= current_user.email %></strong>.
    <%= link_to 'Edit profile', edit_user_registration_path,class:"btn btn-outline-primary" %> 
    <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"btn btn-outline-primary"  %>
  <% else %>
    <%= link_to "Sign up", new_user_registration_path, class:"btn btn-outline-primary"  %>
    <%= link_to "Login", new_user_session_path, class:"btn btn-outline-primary"  %>
  <% end %>
  <% if user_signed_in? %>
   <% if current_user.profile == nil %>
     <p><%= image_tag 'lustreb - Copy.PNG', class:"rounded-circle" %></p>
     <%= link_to 'upload a profile picture', new_profile_path, class: "btn btn-success " %>
   <% else %>
   <% if current_user.profile.image? %>
     <p><%= image_tag current_user.profile.image.url, class:"rounded-circle" %></p>
     <%= link_to 'Edit Profile picture', edit_profile_path(current_user), class: "btn btn-success " %>
    <% end %>
   <% end %>
   <% end %>
    <%= yield %> 

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

  </body>
